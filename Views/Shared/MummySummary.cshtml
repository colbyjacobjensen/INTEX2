@model Burialmain




<div class="card card-outline-primary m-1 p-1 col">
    <div class="bg-light p-1">
        <h3>ID: @Model.Id</h3>
    </div>
    <ul class="card-text p-1" style="list-style:none">
        <li>Textile Color: BLANK</li>
        <li>Textile Structure: BLANK</li>
        <li>Sex: @Model.Sex</li>
        <li>Burial Depth: @Model.Depth</li>
        <li>Estimated Stature: </li>
        <li>Age at Death: @Model.Ageatdeath</li>
        <li>Head Direction: @Model.Headdirection</li>
        <li>Burial ID: @Model.Burialid</li>
        <li>Textile Function: BLANK</li>
        <li>Hair Color: @Model.Haircolor</li>
    </ul>

    <div id="additional-info-@Model.Id" style="display:none">
        <ul class="card-text p-1" style="list-style:none">
            <li>Random Model Information: @Model.Adultsubadult</li>
            <li>Random Model Information: @Model.Burialmaterials</li>
            <li>Random Model Information: @Model.Dateofexcavation</li>
            <li>Random Model Information: @Model.Dataexpertinitials</li>
        </ul>
    </div>
    <span class="card-text">
        <button id="toggle-btn-@Model.Id" onclick="toggleAdditionalInfo()" type="button" class="btn btn-success btn-sm float-end">View More Information</button>
    </span>

</div>


<script>
    var toggleBtn = document.getElementById('toggle-btn-@Model.Id');
    var additionalInfo = document.getElementById('additional-info-@Model.Id');

    toggleBtn.addEventListener('click', function () {
        console.log('Button clicked!');
        console.log(toggleBtn.id)
        toggleAdditionalInfo();
    });

    function toggleAdditionalInfo() {
        if (additionalInfo.style.display === 'none') {
            additionalInfo.style.display = 'block';
            toggleBtn.innerText = 'Hide Additional Information';
        } else {
            additionalInfo.style.display = 'none';
            toggleBtn.innerText = 'View More Information';
        }
    }
</script>