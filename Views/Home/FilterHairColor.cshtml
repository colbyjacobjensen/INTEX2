
@{
    ViewData["Title"] = "Filter Hair Color";
}

<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <h1 class="display-5 fw-bolder text-white mb-2 text-center">Filter Category: Hair Color</h1>
        </div>
    </div>
</header>

<div class="container text-center">
    <h3>Please select a value for Hair Color below:</h3>
    <br />

    <form method="post" asp-controller="Home" asp-action="BurialList" id="filterCategory">
        <input type="hidden" name="filterType" value="Hair Color" />

        <label>Hair Color:</label>
        <select class="my-select" name="filterValue" id="hairColor">
            @foreach (var x in ViewBag.MummyDataHairColor)
            {
                <option value="@x">@x</option>
            }
        </select>
        <br />
        <br />
        <br />
        <button class="btn btn-primary" type="submit">Filter</button>
    </form>

</div>
