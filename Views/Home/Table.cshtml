@{
    ViewData["Title"] = "Records";
}

@model List<Burialmain>

<table class="table table-bordered table-striped">
    <!--Column Names-->
    <thead class="font-weight-bold">
        <tr>
            <td>Sex</td>
            <td>Child/Adult</td>
            <td>Age of Death</td>
            <td>Depth</td>
            <td>Head Direction</td>
            <td>Date of Excavation</td>
            <td>Data Expert Initials</td>
            <td>Burial ID</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Sex</td>
                    <td>@x.Adultsubadult</td>
                    <td>@x.Ageatdeath</td>
                    <td>@x.Depth</td>
                    <td>@x.Headdirection</td>
                    <td>@x.Dateofexcavation</td>
                    <td>@x.Dataexpertinitials</td>
                    <td>@x.Burialid</td>
                </tr>
            }
    </tbody>
</table>